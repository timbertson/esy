(executable
  (name esy)
  (preprocess (pps lwt_ppx ppx_let ppx_deriving_yojson ppx_deriving.std))
  (flags (:standard (-w -39) "-open" "EsyLib" "-open" "EsyProject"))
  (libraries
            lwt
            lwt.unix
            cmdliner
            logs
            logs.fmt
            logs.lwt
            logs.cli
            fmt
            fmt.cli
            fmt.tty
            str
            astring
            ppx_deriving_yojson.runtime
            EsyBuild
            EsyInstall
            EsySolve
            EsyProject
            )
  )

(install
  (package esy)
  (section bin)
   (files
     (esy.exe as esy)
     (esyInstallRelease.js as esyInstallRelease.js)
     ))
